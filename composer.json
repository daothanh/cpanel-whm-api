{
    "name": "daothanh/cpanel-whm-api",
    "description": "Manage WHM and cPanel servers with PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "daothanh",
            "email": "thanhdx86@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-curl": "*",
        "guzzlehttp/psr7": "^2.1",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Daothanh\\cPanelWHM\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daothanh\\cPanelWHM\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "mockery/mockery": "^1.4",
        "php-http/mock-client": "^1.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts":{
        "phpcs": "vendor/bin/phpcs --standard=psr2 src/",
        "phpunit": "vendor/bin/phpunit"
    }
}
